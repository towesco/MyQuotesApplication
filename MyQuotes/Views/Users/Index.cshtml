@using MyQuotes.Models
@{
    ViewBag.Title = "Index";

    List<Tag> tagList = ViewBag.tagList;

    string url = Request.Url.Host + "/users#/tag/arif";
}
@section Scripts
{

    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Client/QuotesModul.js"></script>
    <script src="~/Client/QuotesServices.js"></script>
    <script src="~/Client/ListController.js"></script>

}

<div class="row">
    <div class="col-md-3 myListTag">
        <h3>Etiketler</h3>
        <div class="list-group">

            <a ng-repeat="item in tagMenu" href="{{item.Url}}" class="list-group-item">

                <span class="badge">{{item.TagCount}}</span>
                {{item.TagName}}
            </a>
        </div>
    </div>
    <div class="col-md-9 myList">
        <h2>Notlarım</h2>

        <ng-view></ng-view>
    </div>
</div>
<input ng-model="userId" id="userId" value="@ViewData["userId"]" type="hidden" />