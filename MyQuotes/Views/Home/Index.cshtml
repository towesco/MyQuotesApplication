<div class="homeWrapper" ng-controller="HomeController">

    <div class="row">
        <div class="col-md-12">

            <div class="alert alert-info">

                <h4>
                    www.putnotes.net web sitelerinde gezindiğiniz zaman seçmiş olduğunuz önemli cümleleri veya alıntıları google chrome uzantısı sayesinde etiket belirterek kaydetmenizi sağlar. Kaydetmiş olduğunuz cümleleri veya alıntıları facebook hesabınızla girip yaparak görebilir,düzenleyebilirsiniz.
                </h4>
            </div>
        </div>

        <div class="col-md-7">

            <iframe width="100%" height="350" src="https://www.youtube.com/embed/X72uiEMRnD8" frameborder="0" allowfullscreen></iframe>
            @*<img src="http://placehold.it/650x500" />*@
        </div>
        <div class="col-md-5">
            <div class="jumbotron text-center" style="height:350px;">

                <h2>Giriş yap</h2>
                <hr />
                <p></p>
                @using (Html.BeginForm("FacebookLogin", "Home", FormMethod.Post, new { @id = "FacebookLoginForm" }))
                {
                    <button type="submit" style="border:none;background:none;">
                        <img src="@Url.Content("~/Content/Pictures/facebook-icon.png")" />
                    </button>

                    <a style="margin-top:10px;" class="btn btn-success btn-lg" href="https://chrome.google.com/webstore/detail/putnotes/baeljpapdgmfidpmgdpffihaelhcmbob?hl=en-US" target="_blank">
                        <i class="glyphicon glyphicon-download-alt"></i>  putnotes.net chrome uzantısını indir
                    </a>
                }
            </div>
        </div>

        <div class="col-md-12">
            <img class="img-responsive img-rounded img-thumbnail" src="@Url.Content("~/Content/Pictures/bir.png")" />
            <hr />
            <img class="img-responsive img-rounded img-thumbnail" src="@Url.Content("~/Content/Pictures/iki.png")" />
            <hr />
            <img class="img-responsive img-rounded img-thumbnail" src="@Url.Content("~/Content/Pictures/uc.png")" />
            <hr />
            <img class="img-responsive img-rounded img-thumbnail" src="@Url.Content("~/Content/Pictures/dort.png")" />
            <hr />
        </div>
    </div>
</div>